MANDATORY = Mandatory
BONUS = Bonus

.PHONY: all mandatory bonus clean fclean re

all: 
	@clear
	@echo "\033[1;34m=====================================\033[0m"
	@echo "\033[1;32m          Building so_long          \033[0m"
	@echo "\033[1;34m=====================================\033[0m"
	@echo "\033[1;36mðŸ”„ Compiling Mandatory...\033[0m"
	@$(MAKE) -C $(MANDATORY)
	@echo "\033[1;36mðŸ”„ Compiling Bonus...\033[0m"
	@$(MAKE) -C $(BONUS)
	@echo "\033[1;32mâœ… Make Done!\033[0m"

mandatory:
	@echo "\033[1;36mðŸ”„ Compiling Mandatory...\033[0m"
	@$(MAKE) -C $(MANDATORY)

bonus:
	@echo "\033[1;36mðŸ”„ Compiling Bonus...\033[0m"
	@$(MAKE) -C $(BONUS)

clean:
	@clear
	@echo "\033[1;34m=====================================\033[0m"
	@echo "\033[1;32m          Cleaning so_long          \033[0m"
	@echo "\033[1;34m=====================================\033[0m"
	@echo "\033[1;36mðŸ”„ Compiling Cleaning...\033[0m"
	@echo "\033[1;33mðŸ§¹ Cleaning...\033[0m"
	@$(MAKE) clean -C $(MANDATORY)
	@$(MAKE) clean -C $(BONUS)
	@echo "\033[1;32mâœ… Clean Done!\033[0m"

fclean:
	@clear
	@echo "\033[1;34m=====================================\033[0m"
	@echo "\033[1;32m        Full Cleaning so_long        \033[0m"
	@echo "\033[1;34m=====================================\033[0m"
	@echo "\033[1;36mðŸ”„ Compiling Full Cleaning...\033[0m"
	@echo "\033[1;31mðŸ”¥ Full Clean...\033[0m"
	@$(MAKE) fclean -C $(MANDATORY)
	@$(MAKE) fclean -C $(BONUS)
	@echo "\033[1;32mâœ… Full Clean Done!\033[0m"

re: fclean all

